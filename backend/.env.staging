# Staging Environment Configuration

# Server Configuration
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# Database
DB_PATH=./data/smart-home-staging.db

# Security
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=https://staging.smarthomehub.example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Logging
LOG_LEVEL=info

# Backup
BACKUP_DIR=./backups
MAX_BACKUPS=14

# AI Providers (Configure as needed)
OLLAMA_ENABLED=${OLLAMA_ENABLED:-false}
OLLAMA_BASE_URL=${OLLAMA_BASE_URL}

OPENAI_ENABLED=${OPENAI_ENABLED:-false}
OPENAI_API_KEY=${OPENAI_API_KEY}

CLAUDE_ENABLED=${CLAUDE_ENABLED:-false}
CLAUDE_API_KEY=${CLAUDE_API_KEY}

GEMINI_ENABLED=${GEMINI_ENABLED:-false}
GEMINI_API_KEY=${GEMINI_API_KEY}

# Zigbee Configuration
ZIGBEE_ENABLED=${ZIGBEE_ENABLED:-false}
ZIGBEE_PORT=${ZIGBEE_PORT}
ZIGBEE_ADAPTER=zstack
ZIGBEE_CHANNEL=11
ZIGBEE_PAN_ID=0x1a62

# Matter Configuration
MATTER_ENABLED=${MATTER_ENABLED:-false}
MATTER_PORT=5540
MATTER_DISCRIMINATOR=3840
MATTER_PASSCODE=20202021

# Voice Control
VOICE_ENABLED=${VOICE_ENABLED:-false}
VOICE_LANGUAGE=en-US

# Redis
REDIS_ENABLED=${REDIS_ENABLED:-true}
REDIS_HOST=${REDIS_HOST:-redis}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
