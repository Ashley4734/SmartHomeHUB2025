# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# Database
DATABASE_PATH=./data/smart-home.db

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AI Services
# Ollama (Local)
OLLAMA_ENABLED=true
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# OpenAI
OPENAI_ENABLED=false
OPENAI_API_KEY=your-openai-api-key

# Claude (Anthropic)
CLAUDE_ENABLED=false
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Gemini (Google)
GEMINI_ENABLED=false
GEMINI_API_KEY=your-gemini-api-key

# Default AI Provider (ollama, openai, claude, gemini)
DEFAULT_AI_PROVIDER=ollama

# Zigbee Configuration
ZIGBEE_ENABLED=true
ZIGBEE_PORT=/dev/ttyUSB0
ZIGBEE_ADAPTER=zStack3x0
ZIGBEE_CHANNEL=11
ZIGBEE_PAN_ID=0x1a62

# Matter Configuration
MATTER_ENABLED=true
MATTER_PORT=5540
MATTER_DISCRIMINATOR=3840
MATTER_PASSCODE=20202021
MATTER_VENDOR_ID=0xFFF1
MATTER_PRODUCT_ID=0x8000

# Voice Control
VOICE_ENABLED=true
VOICE_WAKE_WORD=hey_hub
VOICE_STT_PROVIDER=whisper
VOICE_TTS_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/smart-home.log

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HTTPS_ENABLED=false
# Set to true in production to enable HTTPS redirect and HSTS headers
CSRF_SECRET=change-this-csrf-secret-in-production

# Brute Force Protection
MAX_FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MS=900000
ATTEMPT_WINDOW_MS=900000
