# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DB_PATH=./data/smart-home.db

# Security - IMPORTANT: Set these in your deployment environment
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# CORS - Update with your actual domain
CORS_ORIGIN=https://smarthomehub.example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# HTTPS/TLS Security
HTTPS_ENABLED=true
CSRF_SECRET=${CSRF_SECRET}

# Logging
LOG_LEVEL=info

# Backup
BACKUP_DIR=./backups
MAX_BACKUPS=30

# AI Providers - Configure based on your needs
OLLAMA_ENABLED=${OLLAMA_ENABLED:-false}
OLLAMA_BASE_URL=${OLLAMA_BASE_URL}

OPENAI_ENABLED=${OPENAI_ENABLED:-false}
OPENAI_API_KEY=${OPENAI_API_KEY}

CLAUDE_ENABLED=${CLAUDE_ENABLED:-false}
CLAUDE_API_KEY=${CLAUDE_API_KEY}

GEMINI_ENABLED=${GEMINI_ENABLED:-false}
GEMINI_API_KEY=${GEMINI_API_KEY}

# Zigbee Configuration
ZIGBEE_ENABLED=${ZIGBEE_ENABLED:-true}
ZIGBEE_PORT=${ZIGBEE_PORT}
ZIGBEE_ADAPTER=zstack
ZIGBEE_CHANNEL=11
ZIGBEE_PAN_ID=${ZIGBEE_PAN_ID}

# Matter Configuration
MATTER_ENABLED=${MATTER_ENABLED:-true}
MATTER_PORT=5540
MATTER_DISCRIMINATOR=${MATTER_DISCRIMINATOR}
MATTER_PASSCODE=${MATTER_PASSCODE}

# Voice Control
VOICE_ENABLED=${VOICE_ENABLED:-true}
VOICE_LANGUAGE=en-US

# Redis
REDIS_ENABLED=true
REDIS_HOST=${REDIS_HOST:-redis}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Monitoring
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Alerts (Optional - configure if using alerting)
ALERT_EMAIL=${ALERT_EMAIL}
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
